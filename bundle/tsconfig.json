{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/declarations",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "target": "es5"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
